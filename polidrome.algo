FUNCTION Polindrome(word) : STRING
VAR
    word : STRING
    i : INTEGER
BEGIN
    IF (word.length[0] <= 1) THEN
        Write("true")
    END_IF
    FOR i FROM 0 TO word.length -1 DO
    IF (word.length[0] != word.length -1) THEN
        write ("false")
    ELSE
    RETURN Polindrome(i[1], word.length-1)
    END_IF
    END_FOR
END

